<style>
  .search-btn {
    background-color: #fe424d;
    color: white;
    border-radius: 1.5rem;
    padding: 0 1rem;
  }

  .search-btn:hover {
    background-color: #fe424d;
    color: white;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 1.5rem;
    padding: 0.5rem 3rem;
    font-size: 1rem;
    border: 1px solid rgba(0, 0, 0, 0.3);
  }

  #navbarNavAltMarkup {
    background-color: white;
    padding: 0.5rem;
    border-radius: 0.3rem;
  }

  .navbar-toggler {
    border: none;
    /* font-size: 150%; */
  }
  .fa-user {
    /* border: none; */
    font-size: 125%;
  }
</style>
<nav class="navbar navbar-expand-md border-bottom fixed-top bg-color-white">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"
      ><i class="fa-regular fa-compass"></i
    ></a>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>
      <div class="navbar-nav ms-auto">
        <form
          class="d-flex needs-validation"
          role="search"
          method="get"
          action="/listings"
          novalidate
        >
          <input
            class="form-control me-2 search-inp"
            type="search"
            placeholder="Search destinations"
            name="titleQuery"
            required
          />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if(!currUser) { %>
        <a class="nav-link" aria-current="page" href="/signup"
          ><b>Sign Up</b></a
        >
        <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %> <% if(currUser) { %>
        <a class="nav-link" href="/logout"><b>Log Out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
